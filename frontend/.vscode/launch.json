{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js Development Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on",
        "uriFormat": "http://localhost:3000",
        "action": "openExternally"
      }
    }
  ]
}
