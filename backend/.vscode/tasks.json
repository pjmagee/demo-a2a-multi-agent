{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend: uv sync",
      "type": "shell",
      "command": "uv",
      "args": [
        "sync",
        "--group",
        "dev"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "backend: run api",
      "type": "shell",
      "command": "uv",
      "args": [
        "run",
        "python",
        "-m",
        "webapp_backend.app"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    }
  ]
}
